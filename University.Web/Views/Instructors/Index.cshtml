@model List<University.BL.DTOs.InstructorDTO>

@{
    ViewBag.Title = "Index";
}

<h2>Instructors</h2>

@Html.ActionLink("New", "Create", "Instructors", null, new { @class = "btn btn-primary" })


<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Last Name</th>
            <th>FirstMid Nmae</th>
            <th>Hire Date</th>
            <th>Options</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.LastName</td>
                <td>@item.FirstMidName</td>
                <td>@item.HireDate</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Instructors", new { id = item.ID }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Delete", "Delete", "Instructors", new { id = item.ID }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Courses", "Index", "Instructors", new { id = item.ID }, new { @class = "btn btn-info" })
                </td>
            </tr>
        }


    </tbody>
</table>

@if (ViewBag.Courses != null)
{
    var instructorsDTO = (List<University.BL.DTOs.CourseDTO>)ViewBag.Courses;

    <h2>Courses by Instructors</h2>
    <hr />

    <table class="table table-bordered">
        <thead>
            <tr>
                <th> Course ID</th>
                <th>Title</th>
                <th>Credits</th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in instructorsDTO)
            {
                <tr>
                    <td>@item.CourseID</td>
                    <td>@item.Title</td>
                    <td>@item.Credits</td>
                </tr>
            }
        </tbody>
    </table>

}