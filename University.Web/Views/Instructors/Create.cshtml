@model University.BL.DTOs.InstructorDTO
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@Html.ValidationSummary(false,"", new  { @class ="text-danger"})

<form action="/Instructors/Create" method="post">

    <div class="form-row">
               
        <div class="col-md-4">
            @Html.LabelFor(m => m.LastName)
            @Html.EditorFor(m => m.LastName, new { HtmlAttributes = new { @class = "form-control", @placeholder = "Enter the LastName",@autocomplete="off"} })
            @Html.ValidationMessageFor(m => m.LastName,"", new {@class = "text-danger"})
            @*<label>Last Name:</label>
            <input type="text" name="name" placeholder="Enter the Last Name" class="form-control" />*@
        </div>
        <div class="col-md-4">
            @Html.LabelFor(m => m.FirstMidName)
            @Html.EditorFor(m => m.FirstMidName, new { HtmlAttributes = new { @class = "form-control", @placeholder = "Enter the FirstName", @autocomplete = "off" } })
            @Html.ValidationMessageFor(m => m.FirstMidName, "", new { @class = "text-danger" })
            @*<label>FirstMid Name:</label>
        <input type="text" name="FirstMid Name" placeholder="Enter the FirstMid Name" class="form-control" />*@
        </div>
        <div class="col-md-4">
            @Html.LabelFor(m => m.HireDate)
            @Html.EditorFor(m => m.HireDate, new { HtmlAttributes = new { @class = "form-control", @placeholder = "Enter the Enrollment", @autocomplete = "off" } })
            @*<label>Enrollment Date:</label>
            <input type="datetime" name="Enrollment Date" placeholder="Enter the Enrollment Date" class="form-control" />*@
        </div>
    </div>

    <div class="form-row">
        <div class="col-md-12">
            <br />
            <input type="submit" name="btnCreate" value="Create" class="btn btn-primary" />
            @Html.ActionLink("Back", "Index", "Instructors", null, new { @class = "btn btn-primary" })
        </div>        
    </div>

</form>

